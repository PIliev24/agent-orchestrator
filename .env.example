# Agent Orchestrator Environment Configuration

# API Authentication
API_KEY=your-secure-api-key

# Database (PostgreSQL with asyncpg)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agent_orchestrator

# Optional: Separate checkpoint connection string (uses same DB by default)
# CHECKPOINT_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/agent_orchestrator

# AI Provider Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...

# Optional: Mistral API key for OCR
# MISTRAL_API_KEY=...

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database debugging (set to true to see SQL queries)
DATABASE_ECHO=false
